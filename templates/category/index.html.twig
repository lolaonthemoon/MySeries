{% extends 'base.html.twig' %}


{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Catégories : </h1>
    <h3><a href="{{ path("category_new")}}">Add </a></h3>

    {% for category in categories %}
    <div>
        <h2>{{ loop.index }} - <a href="{{ path('category_show', { categoryName: category.name }) }}">{{ category.name }} 
             
    </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

{% endblock %}