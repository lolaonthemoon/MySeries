{% extends 'base.html.twig' %}


{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Catégories : </h1>

    {% for category in categories %}
    <div>
        <h2>{{ loop.index }} - <a href="{{ path('category_show', { categoryName: category.name }) }}">{{ category.name }} 

        </a> </h2>
        <a href="{{ path('category_show', { categoryName: category.name }) }}">Back </a>
   
  
    </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

{% endblock %}