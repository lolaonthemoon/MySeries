{# templates/program/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
<div class="media">


  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster" width="150" height="220" >

  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>
 
    {% for season  in seasons %}

    <p><a href="{{ path('program_season_show', { programId: program.id , seasonId: season.id}) }}">Saison  {{season.number}} - Année {{season.year}} </a>
 
    </p>
  </div>
    <p> </p>
    <p>{{season.description}} </p>
  
    {% endfor %}

    <p>Catégorie : <a href="{{ path('category_show', { categoryName: program.category.name }) }}">{{ program.category.name }} </a></p>
  </div>

</div>


<a href="{{ path('program_index') }}">
    Programs List
</a>

{% endblock %}
