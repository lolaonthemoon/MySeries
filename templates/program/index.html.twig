{% extends 'base.html.twig' %}


{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries : </h1>

    {% for program in programs %}
    <div>
        <h2>{{ loop.index }} / {{ program.title }} -- {{ program.category.name }}</h2>
        <p>{{ program.summary }}</p>
        {# Lien vers les saisons #}
        <a href="{{ path("program_show", { id: program.id }) }}">Toutes les saisons</a>

    </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}


    <a href="{{ path('app_index') }}">
        Back
    </a>

{% endblock %}